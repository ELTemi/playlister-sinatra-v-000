<h1>Create a new Song</h1>

<form action="/songs" method="POST">
  <br></br>

  Name: <input type="text" name="Name" id="song_name" value="<%=@song.name%>">

  <br></br>

  <% @genres.each do |genre|%>
    Genres: <input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%=genre.id%>" <%='checked' if @song.genre == genre %>><%=genre.name%></input>
  <%end%>

  <br></br>

  <label>Artist name:</label>
    <input  type="text" name="Artist Name" id="artist_name" value="<%= @song.artist.name %>"></input>
  <br></br>


  <input type="submit" value="Create Song">
</form>
